{
  "name": "tripmatrix",
  "version": "1.0.0",
  "private": true,
  "description": "TripMatrix - Trip logging and social travel tracking platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm build:packages && pnpm --filter frontend dev",
    "dev:backend": "pnpm build:packages && pnpm --filter backend dev",
    "dev:frontend": "pnpm build:packages && pnpm --filter frontend dev",
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter @tripmatrix/types build && pnpm --filter @tripmatrix/utils build",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

